<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <h1 class="text-3xl font-bold mb-6">Editing Post</h1>

  <!-- Form Partial -->
  <%= render "form", post: @post %>

  <!-- Navigation Links -->
  <div class="mt-6 flex space-x-4">
    <%= link_to "Show this post", @post, class: "text-blue-500 hover:text-blue-700 font-medium" %> |
    <%= link_to "Back to posts", posts_path, class: "text-gray-500 hover:text-gray-700 font-medium" %>
  </div>
</div>
